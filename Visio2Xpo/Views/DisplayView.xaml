<UserControl x:Class="cvo.buyshans.Visio2Xpo.UI.Views.DisplayView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid">
    <dxg:TreeListControl>
        <dxg:TreeListControl.Columns>
            <dxg:TreeListColumn FieldName="AOTObject" AllowSorting="False"/>
            <dxg:TreeListColumn FieldName="AOTObjectType" AllowSorting="False" AllowEditing="True"/>
        </dxg:TreeListControl.Columns>
        <dxg:TreeListControl.View>
            <dxg:TreeListView 
                FocusedRow="{Binding SelectedProjectEntity, Mode=TwoWay}" 
                TreeDerivationMode="ChildNodesSelector" 
                ChildNodesPath="ChildNodes" 
                ShowHorizontalLines="False"
                ShowColumnHeaders="False"
                ShowIndicator="False"
                ShowVerticalLines="False"
                AllowEditing="False"
                NavigationStyle="Row"
                AutoWidth="True"/>
        </dxg:TreeListControl.View>
    </dxg:TreeListControl>
</UserControl>
